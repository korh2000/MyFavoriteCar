<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="79dp" />

    <TextView
        android:id="@+id/itemTextViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="textView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/itemTextViewServices" />

    <TextView
        android:id="@+id/itemTextViewServices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_below="@+id/itemTextViewDate"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:textColor="#1b2196" />

    <TextView
        android:id="@+id/itemTextViewSumInvoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:text="New Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />



</RelativeLayout>
